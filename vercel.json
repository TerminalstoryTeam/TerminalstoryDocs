{
  "version": 2,
  "builds": [{
    "src": "mkdocs.yml",
    "use": "@vercel/python",
    "config": {
      "maxLambdaSize": "15mb",
      "runtime": "python3.8"
    }
  }],
  "buildCommand": "pip3 install mkdocs mkdocs-material mkdocs-static-i18n && mkdocs build --site-dir=public",
  "outputDirectory": "public",
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
} 